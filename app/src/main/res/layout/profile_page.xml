<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">

    <ImageView
        android:id="@+id/TopBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/top_bar_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/SamsaraLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/samsara_logo_1"
        app:layout_constraintStart_toStartOf="@id/TopBar"
        app:layout_constraintTop_toTopOf="@id/TopBar"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="90dp"
        android:layout_marginTop="24dp"
        android:text="@string/profile"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/text_xl"
        app:layout_constraintEnd_toEndOf="@id/TopBar"
        app:layout_constraintStart_toEndOf="@id/SamsaraLogo"
        app:layout_constraintTop_toTopOf="@id/SamsaraLogo" />

    <ImageButton
        android:id="@+id/SignInOutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/account_1"
        app:layout_constraintEnd_toEndOf="@id/TopBar"
        app:layout_constraintTop_toTopOf="@id/TopBar"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tvSignInOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_in"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@id/SignInOutBtn"
        app:layout_constraintEnd_toEndOf="@id/SignInOutBtn"
        app:layout_constraintStart_toStartOf="@id/SignInOutBtn"
        app:layout_constraintTop_toTopOf="@id/SignInOutBtn" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/profileScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:paddingBottom="@dimen/spacing_xl"
        app:layout_constraintBottom_toTopOf="@id/navbar_include"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TopBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profileContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.03" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.97" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_mleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.47" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_mright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.53" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <ImageView
                android:id="@+id/imgProfilePic"
                android:layout_width="@dimen/profile_image_size"
                android:layout_height="@dimen/profile_image_size"
                android:layout_marginTop="@dimen/spacing_xxl"
                android:scaleType="centerCrop"
                android:src="@drawable/account_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_sm"
                android:layout_marginTop="@dimen/spacing_xl"
                android:text="@string/username"
                android:textColor="#FFFFFF"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintTop_toBottomOf="@id/imgProfilePic" />

            <EditText
                android:id="@+id/UserBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_sm"
                android:background="@drawable/account_3"
                android:hint="@string/username"
                android:inputType="text"
                android:paddingStart="15dp"
                android:scaleType="fitXY"
                android:textColor="#FFFFFF"
                android:textColorHint="#a2a2a2"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintTop_toBottomOf="@id/tvUsername"
                tools:ignore="Autofill" />

            <TextView
                android:id="@+id/tvEmailPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_sm"
                android:layout_marginTop="@dimen/spacing_lg"
                android:text="@string/email_or_phone_number"
                android:textColor="#FFFFFF"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintTop_toBottomOf="@id/UserBox" />

            <EditText
                android:id="@+id/EmailPhoneBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_sm"
                android:background="@drawable/account_3"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:paddingStart="15dp"
                android:scaleType="fitXY"
                android:textColor="#FFFFFF"
                android:textColorHint="#a2a2a2"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintTop_toBottomOf="@id/tvEmailPhone"
                tools:ignore="Autofill" />

            <TextView
                android:id="@+id/tvPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_sm"
                android:layout_marginTop="@dimen/spacing_lg"
                android:freezesText="true"
                android:text="@string/password"
                android:textColor="#FFFFFF"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintTop_toBottomOf="@id/EmailPhoneBox" />

            <EditText
                android:id="@+id/PasswordBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/account_3"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:paddingStart="15dp"
                android:scaleType="fitXY"
                android:textColor="#FFFFFF"
                android:textColorHint="#a2a2a2"
                android:theme="@android:style/Theme.Material.NoActionBar"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintTop_toBottomOf="@id/tvPassword"
                tools:ignore="Autofill" />

            <ImageButton
                android:id="@+id/SetupBiometricsBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xl"
                android:backgroundTint="#00FFFFFF"
                android:scaleType="fitXY"
                android:src="@drawable/account_4"
                app:layout_constraintEnd_toStartOf="@id/guideline_middle"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintTop_toBottomOf="@id/PasswordBox"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tvSetupBiometrics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setup_biometrics"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/SetupBiometricsBtn"
                app:layout_constraintEnd_toEndOf="@id/SetupBiometricsBtn"
                app:layout_constraintStart_toStartOf="@id/SetupBiometricsBtn"
                app:layout_constraintTop_toTopOf="@id/SetupBiometricsBtn" />

            <ImageButton
                android:id="@+id/EditInformationBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xl"
                android:backgroundTint="#00FFFFFF"
                android:scaleType="fitXY"
                android:src="@drawable/account_4"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"
                app:layout_constraintStart_toStartOf="@id/guideline_middle"
                app:layout_constraintTop_toBottomOf="@id/PasswordBox"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tvEditInformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_information"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@id/EditInformationBtn"
                app:layout_constraintEnd_toEndOf="@id/EditInformationBtn"
                app:layout_constraintStart_toStartOf="@id/EditInformationBtn"
                app:layout_constraintTop_toTopOf="@id/EditInformationBtn" />

            <ImageButton
                android:id="@+id/SaveBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_sm"
                android:backgroundTint="#00FFFFFF"
                android:scaleType="fitXY"
                android:src="@drawable/account_5"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintTop_toBottomOf="@id/EditInformationBtn"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tvSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@id/SaveBtn"
                app:layout_constraintEnd_toEndOf="@id/SaveBtn"
                app:layout_constraintStart_toStartOf="@id/SaveBtn"
                app:layout_constraintTop_toTopOf="@id/SaveBtn" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <include
        android:id="@+id/navbar_include"
        layout="@layout/navbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
