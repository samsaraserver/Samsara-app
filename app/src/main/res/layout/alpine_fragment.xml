<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Add guidelines for proportional margins -->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.03" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.97" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_mleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.47" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_mright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.53" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.02" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.88" />

            <!-- Background 1 -->

            <!--Background 2-->

            <TextView
                android:id="@+id/tvAlpine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alpine_guide"
                android:textColor="#C44F4F"
                android:textSize="34sp"
                app:layout_constraintEnd_toStartOf="@+id/guideline_end"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintTop_toTopOf="@+id/guideline_top" />

            <ImageView
                android:id="@+id/Background1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/documentation_6"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintTop_toBottomOf="@+id/tvAlpine" />

            <ImageView
                android:id="@+id/Background2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_md"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/documentation_6"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintTop_toBottomOf="@id/Background1" />

            <!--content-->

            <ImageView
                android:id="@+id/OverviewIcon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/documentation_8"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintTop_toTopOf="@+id/Background1" />

            <TextView
                android:id="@+id/tvSystemRequirements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_sm"
                android:gravity="center"
                android:text="@string/heading_1"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintTop_toBottomOf="@id/OverviewIcon" />

            <ImageView
                android:id="@+id/line1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_sm"
                android:layout_marginStart="@dimen/padding_md"
                android:layout_marginEnd="@dimen/padding_md"
                android:src="@drawable/documentation_9"
                android:scaleType="fitXY"
                android:contentDescription="@null"
                app:layout_constraintTop_toBottomOf="@id/tvSystemRequirements"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"/>

            <TextView
                android:id="@+id/tvSystemRequirements2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_smd"
                android:layout_marginEnd="@dimen/padding_smd"
                android:layout_marginTop="@dimen/padding_sm"
                android:text="@string/lorem_ipsum_dolor_sit_amet_consectetur_adipiscing_elit_sed_do_eiusmod_tempor_incididunt_ut_labore_et_dolore_magna_aliqua_ut_enim_ad_minim_veniam_quis_nostrud_exercitation_ullamco_laboris_nisi_ut_aliquip_ex_ea_commodo_consequat"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintTop_toBottomOf="@id/line1"  />

            <TextView
                android:id="@+id/tvMinimumRequirments"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_sm"
                android:gravity="center"
                android:scaleType="fitXY"
                android:text="@string/heading_2"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintTop_toBottomOf="@id/tvSystemRequirements2" />

            <ImageView
                android:id="@+id/line2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:layout_marginTop="@dimen/padding_sm"
                android:layout_marginStart="@dimen/padding_md"
                android:layout_marginEnd="@dimen/padding_md"
                android:src="@drawable/documentation_9"
                android:scaleType="fitXY"
                app:layout_constraintTop_toBottomOf="@id/tvMinimumRequirments"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintEnd_toEndOf="@id/guideline_end" />

            <TextView
                android:id="@+id/tvMinimumRequirments2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_sm"
                android:layout_marginStart="@dimen/padding_smd"
                android:layout_marginEnd="@dimen/padding_smd"
                android:text="@string/duis_aute_irure_dolor_in_reprehenderit_in_voluptate_velit_esse_cillum_dolore_eu_fugiat_nulla_pariatur_excepteur_sint_occaecat_cupidatat_non_proident_sunt_in_culpa_qui_officia_deserunt_mollit_anim_id_est_laborum"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintTop_toBottomOf="@+id/line2" />

            <TextView
                android:id="@+id/tvInstallationSteps"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_sm"
                android:scaleType="fitXY"
                android:gravity="center"
                android:text="@string/heading_3"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintTop_toTopOf="@id/Background2" />

            <ImageView
                android:id="@+id/line3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_sm"
                android:layout_marginStart="@dimen/padding_md"
                android:layout_marginEnd="@dimen/padding_md"
                android:scaleType="fitXY"
                android:src="@drawable/documentation_9"
                android:contentDescription="@null"
                app:layout_constraintTop_toBottomOf="@id/tvInstallationSteps"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintEnd_toEndOf="@id/guideline_end" />

            <TextView
                android:id="@+id/tvInstallationSteps2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_sm"
                android:layout_marginStart="@dimen/padding_smd"
                android:layout_marginEnd="@dimen/padding_smd"
                android:text="@string/nemo_enim_ipsam_voluptatem_quia_voluptas_sit_aspernatur_aut_odit_aut_fugit_sed_quia_consequuntur_magni_dolores"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/line3"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintEnd_toEndOf="@id/guideline_end" />

            <!-- Install image with overlayed code text -->
            <ImageView
                android:id="@+id/InstallView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_md"
                android:layout_marginStart="@dimen/padding_smd"
                android:layout_marginEnd="@dimen/padding_smd"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/documentation_7"
                android:contentDescription="@null"
                app:layout_constraintTop_toBottomOf="@id/tvInstallationSteps2"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"  />

            <TextView
                android:id="@+id/tvInstallationSteps3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/npm_install_g_samsara_server"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toTopOf="@id/InstallView"
                app:layout_constraintBottom_toBottomOf="@id/InstallView"
                app:layout_constraintStart_toStartOf="@id/InstallView"
                app:layout_constraintEnd_toEndOf="@id/InstallView" />

            <TextView
                android:id="@+id/tvInstallationSteps4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_sm"
                android:layout_marginStart="@dimen/padding_smd"
                android:layout_marginEnd="@dimen/padding_smd"
                android:text="@string/neque_porro_quisquam_est_qui_dolorem_ipsum_quia_dolor_sit_amet_consectetur_adipisci_velit_sed_quia_non_numquam"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/InstallView"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"
                app:layout_constraintStart_toStartOf="@id/guideline_start" />

            <!-- Text overlaid on Background2 - BOTTOM -->

            <TextView
                android:id="@+id/tvConfig"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_sm"
                android:gravity="center"
                android:text="@string/heading_4"
                android:scaleType="fitXY"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintTop_toBottomOf="@id/tvInstallationSteps4" />

            <ImageView
                android:id="@+id/line4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_sm"
                android:layout_marginStart="@dimen/padding_md"
                android:layout_marginEnd="@dimen/padding_md"
                android:scaleType="fitXY"
                android:contentDescription="@null"
                android:src="@drawable/documentation_9"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintTop_toBottomOf="@id/tvConfig" />

            <TextView
                android:id="@+id/tvConfig2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_sm"
                android:layout_marginStart="@dimen/padding_smd"
                android:layout_marginEnd="@dimen/padding_smd"
                android:text="@string/at_vero_eos_et_accusamus_et_iusto_odio_dignissimos_ducimus_qui_blanditiis_praesentium_voluptatum_deleniti"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/line4"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintEnd_toEndOf="@id/guideline_end" />

            <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_sm"
            android:layout_marginStart="@dimen/padding_lg"
            android:text="@string/contents"
            android:textColor="#000000"
            app:layout_constraintHorizontal_bias="0.55"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toTopOf="@+id/OverviewIcon" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/heading_1"
                android:textColor="#C44F4F"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/heading_2"
                android:textColor="#C44F4F"
                app:layout_constraintStart_toStartOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/heading_3"
                android:textColor="#C44F4F"
                app:layout_constraintStart_toStartOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/heading_4"
                android:textColor="#C44F4F"
                app:layout_constraintStart_toStartOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
